<?xml version="1.0" encoding="UTF-8"?>

<project name="hbcaSmallProject" basedir="." default="war">
	<target name="init">
		<mkdir dir="build/classes"/>
		<mkdir dir="dist"/>
	</target>
	<path id="compile.classpath"> 
		<fileset dir="WebRoot/WEB-INF/lib"> 
			<excludesfile name="WebRoot/WEB-INF/libservlet-api.jar"/>
	    </fileset> 
	</path>
	<target name="compile" depends="init" > 
	    <javac destdir="WebRoot/WEB-INF/classes" debug="false" srcdir="src"> 
	        <classpath refid="compile.classpath"/> 
	    </javac> 
	</target>
	<target name="war" depends="compile"> 
	    <war destfile="dist/project.war" webxml="WebRoot/WEB-INF/web.xml"> 
	        <fileset dir="WebRoot">
	        	<exclude name="**/servlet-api.jar" />
	    	</fileset>
	    </war> 
	</target> 
